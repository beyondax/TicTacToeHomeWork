<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin"
    tools:context=".view.TicTacActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/player_cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/player_1"
            android:textColor="#F44336"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/green_line_thickness"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/player_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/player_2"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="2">

        <TextView
            android:id="@+id/player_one_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/starting_score"
            android:textSize="55sp" />


        <View
            android:layout_width="@dimen/green_line_thickness"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/player_two_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/starting_score"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/table_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/grey_line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/table_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/grey_line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/table_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_line_thickness"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/table_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/grey_line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/table_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/grey_line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/table_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_line_thickness"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/table_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/grey_line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/table_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/grey_line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:id="@+id/table_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:gravity="center"
        android:weightSum="3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/active_player_label"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/active_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            tools:text="X" />
    </LinearLayout>

</LinearLayout>